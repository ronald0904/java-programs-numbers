// This program is to find the sum of the odd and even values in the given number;

import java.util.*;
class SumOddEven
{
public static void main(String ar[])
{
int a,odd=0,even=0,rem;
System.out.println("Enter the number: ");
Scanner s= new Scanner(System.in);
a=s.nextInt();
while(a!=0)
{
rem=a%10;
if(rem%2==0)
{
even=even+rem;
}
else
{
odd=odd+rem;
}
a=a/10;
}
System.out.println("The sum of odd is: "+odd);
System.out.println("The sum of even is: "+even);
}
}
